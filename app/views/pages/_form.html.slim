= form_for(@page, html: { class: "form-horizontal", role: "form" }) do |f|
  - if @page.errors.any?
    .alert.alert-danger.alert-dismissable role="alert"
      button.close type="button" data-dismiss="alert"
        span aria-hidden="true"
          | &times;
        span.sr-only
          | Close
      h4= "#{pluralize(@page.errors.count,"error")} prohibited this page from being saved:"
      ul
        - @page.errors.full_messages.each do |msg|
          li= msg
  .form-group
    = f.label :thing1, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :thing1, class: "form-control"
  .form-group
    = f.label :thing2, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :thing2, class: "form-control"
  .form-group
    = f.label :thing3, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :thing3, class: "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: "btn btn-primary"
